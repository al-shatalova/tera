    }
Шрифт для текста

    const styleObjj = {
        color: 'purple',
        fontFamily: 'Century',
        fontSize: 60,
    }

Добавляем сам таймер
    class Timer extends React.Component {
        constructor(props) {
            super(props);
            this.state = { seconds: 0 };
        }

        tick() {
            this.setState(state => ({
                seconds: state.seconds + 1
            }));
        }

        componentDidMount() {
            this.interval = setInterval(() => this.tick(), 1000);
        }

        componentWillUnmount() {
            clearInterval(this.interval);
        }

        render() {

            return (
                <div style={styleObj}>
                    Seconds: {this.state.seconds}

                </div>
            );

        }

    }
Выводим все на экран
    ReactDOM.render(
        <div style={styleObjj}>
            <Name />
            <Age />
            <Post />
            <Timer />
        </div>,
        document.getElementById("time")
    );


</script>
